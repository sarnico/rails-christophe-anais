  <% else %>


    <ul>
      <% @appointments.each do |appointment|%>
      <li>
        <% @app = appointment %>
        <%= "rendez-vous le #{@app.date.strftime("%d/%m/%Y")} Ã  #{@app.date.strftime("%Hh%M")}" %>

