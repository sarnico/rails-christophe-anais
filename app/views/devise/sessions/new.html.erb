 <div class="row justify-content-center">
  <div class="col-12 col-lg-3 registration">
    <div class="choice">
      <h2>Se connecter</h2>
      <h2><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "S'inscrire", new_registration_path(resource_name) %>
        <%end %>
      </h2>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <%= f.input :email,
      label:"Email",
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" }%>
      <%= f.input :password,
      label:"Mot de passe",
      required: true,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label:"Se souvenir de moi",as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions button">
      <%= f.button :submit, "Se connecter" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

